<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".olxselling.ui.OlxUploadActivity">

    <ImageView
        android:layout_marginLeft="60dp"
        android:src="@drawable/ic_baseline_image_24"
        android:layout_width="250dp"
        android:scaleType="fitXY"
        android:id="@+id/imageview"
        android:layout_height="200dp"/>
    <EditText
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/imageview"
        android:hint="Enter Image Name"

        android:id="@+id/inputImageName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:hint="Enter Price "
        android:id="@+id/price_main"
        android:layout_below="@+id/inputImageName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="Enter Contact Number...."
        android:layout_below="@+id/price_main"
        android:id="@+id/Description"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20dp"
        android:text="0.0 %"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_below="@+id/Description"
        android:id="@+id/textViewProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ProgressBar
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:id="@+id/progressbBar"
        android:layout_width="match_parent"
        android:layout_below="@+id/textViewProgress"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/uploadButton"
        android:text="UPLOAD"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/progressbBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="LogOut"
        android:layout_marginTop="40dp"
        android:id="@+id/log_out"

        android:layout_marginLeft="160dp"
        android:layout_below="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>